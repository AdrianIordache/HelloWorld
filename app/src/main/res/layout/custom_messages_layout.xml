<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image" />

    <TextView
        android:id="@+id/custom_message_receiver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/custom_message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:text="Receiver Message"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_message_receiver_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/custom_message_receiver_text"
        android:layout_marginLeft="50dp"
        android:background="@drawable/receiver_messages_layout"
        android:text="Date - Time"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/custom_message_sender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="@+id/custom_message_receiver_text"
        android:background="@drawable/sender_messages_layout"
        android:text="Sender Message"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_message_sender_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/custom_message_sender_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:background="@drawable/sender_messages_layout"
        android:text="Date - Time"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10dp" />


</RelativeLayout>