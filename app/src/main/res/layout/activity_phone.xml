<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneActivity">


    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/inputs"
        android:inputType="number"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:drawableStart="@drawable/phone"
        android:hint="Write your phone number here.."
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/phone_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_below="@id/phone_number_input"
        android:textSize="15dp"
        android:drawableStart="@drawable/password"
        android:hint="Write verification code here.."
        android:textColor="@color/colorAccent"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/phone_send_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_below="@id/phone_code_input"
        android:textSize="15dp"
        android:text="Send Verification Code"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/phone_verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_below="@id/phone_send_code_button"
        android:textSize="15dp"
        android:text="Verify Code"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textStyle="bold"/>


</RelativeLayout>