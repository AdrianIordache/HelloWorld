<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/users_border"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image"
            android:layout_margin="5dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/profile_image"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Username"
                    android:textColor="@color/colorPrimaryNew"
                    android:textAlignment="textStart"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/user_online_status"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/online"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/user_profile_status"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimaryNew"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Status"
                android:textAlignment="textStart"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/request_accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Accept"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryOld"
                    android:background="@drawable/buttons2"
                    android:visibility="invisible"
                    />


                <Button
                    android:id="@+id/request_decline_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Decline"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/colorPrimaryNew"
                    android:background="@drawable/buttons"
                    android:visibility="invisible"

                    />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>